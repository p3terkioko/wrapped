# Spotify API Credentials (Required)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# OAuth Redirect URI (Update with your Vercel domain)
REDIRECT_URI=https://your-app.vercel.app/auth/callback

# Admin Panel Security
ADMIN_PASSWORD=your_admin_password

# Default Playlist Configuration
DEFAULT_PLAYLIST_ID=your_playlist_id

# Environment
NODE_ENV=production

# Port (Not needed for Vercel, but good to have)
PORT=3000
